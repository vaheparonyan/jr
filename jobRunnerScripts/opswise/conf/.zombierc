context:
    base_dir: /var/groupon/seo_opswise/current
    hdfs: hdfs://cerebro-namenode
    # tdload import tool params
    tdload_host: tdwc
    tdload_user: vparonyan
    tdload_pass: LetsDoTDWC12

settings:
    attempts: 1
    cooldown: 0
    fair_scheduling_queue: default
    verify_load_count: 0.01%

    logging:
      version: 1
      formatters:
        simple:
          format: "%(asctime)s %(levelname)s [%(process)d - %(thread)d] - %(message)s"
        stat:
          format: "%(asctime)s|%(name)s|%(message)s"
        meta:
          format: "%(asctime)s|%(message)s"
      handlers:
        console:
          class: logging.StreamHandler
          level: DEBUG
          formatter: simple
          stream: ext://sys.stdout
        rotatingfile:
            class: logging.handlers.TimedRotatingFileHandler
            level: DEBUG
            filename: /var/groupon/log/seo_opswise/zrv2.log
            formatter: simple
            when: midnight
            backupCount: 10
        rotatingstat:
            class: logging.handlers.TimedRotatingFileHandler
            level: INFO
            filename: /var/groupon/log/seo_opswise/zrstat.log
            formatter: stat
            when: midnight
            backupCount: 30
        statconsole:
          class: logging.StreamHandler
          level: INFO
          formatter: stat
          stream: ext://sys.stdout
        metastatrotated_external:
          class: logging.handlers.WatchedFileHandler
          level: INFO
          filename: /var/groupon/log/seo_opswise/zr_meta_stat.log
          formatter: meta
        email:
          class: logging.handlers.SMTPHandler
          level: ERROR
          formatter: simple
          mailhost: localhost
          fromaddr: seoengineering@groupon.com
          toaddrs: [not-monitored@groupon.com]
          subject: "ETL errors"
          secure: []
      loggers:
        "":
          level: DEBUG
          handlers: [console, rotatingfile, email]
        "zr.statput":
          level: INFO
          propagate: false
          handlers: [statconsole, rotatingstat]
        "zr.metaput":
          level: INFO
          propagate: false
          handlers: [metastatrotated_external]
